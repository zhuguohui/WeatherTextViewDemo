<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="WeatherTextView">
        <attr name="WeatherTextViewIconColor" format="color" />
        <attr name="WeatherTextViewIconSize" format="dimension" />
        <attr name="WeatherTextViewCityName" format="string" />
        <attr name="WeatherTextViewFormatString" format="string" />
        <attr name="WeatherTextViewDayOffset" format="integer" />
        <attr name="WeatherTextViewIconLocation" format="enum">
            <enum name="left" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
        </attr>
    </declare-styleable>
</resources>